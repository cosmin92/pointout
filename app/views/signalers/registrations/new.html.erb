<div class="container">
  <div class="row justify-content-center" style="padding-top:100px; padding-bottom:100px;">
    <div class="col-8">

      <div class="card">
        <header class="card-header">
          <%= link_to "Log in", new_signaler_session_path, :class => "float-right btn btn-outline-primary mt-1" %>
          <h4 class="card-title mt-2">Sign up</h4>
        </header>

        <article class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
            <% errors = resource.errors.messages %>
            <div class="form-row">
              <div class="col form-group">
                <% field_class = errors.has_key?(:first_name) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :first_name %>*
                <%= f.text_field :first_name, autofocus: true, :class => field_class %>
                <% if errors.has_key?(:first_name) %>
                  <div class="invalid-feedback">
                    Please enter first name
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="col form-group">
                <% field_class = errors.has_key?(:last_name) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :last_name %>*
                <%= f.text_field :last_name, :class => field_class %>
                <% if errors.has_key?(:last_name) %>
                  <div class="invalid-feedback">
                    Please enter last name
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
            </div><!-- form-row end.// -->

            <div class="form-row">
              <div class="col form-group">
                <% field_class = errors.has_key?(:email) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :email %>*
                <%= f.email_field :email, autocomplete: "email", :class => field_class %>
                <% if errors.has_key?(:email) %>
                  <div class="invalid-feedback">
                    Please enter a valid email
                  </div>
                <% end %>
                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div><!-- form-group end.// -->
              <div class="col form-group">
                <% field_class = errors.has_key?(:phone) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :phone %>*
                <%= f.telephone_field :phone, :class => field_class %>
                <% if errors.has_key?(:first_name) %>
                  <div class="invalid-feedback">
                    Please enter phone number
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
            </div><!-- form-row end.// -->

            <div class="form-row">
              <div class="col form-group">
                <% field_class = errors.has_key?(:password) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :password %>*
                <%= f.password_field :password, autocomplete: "off", :class => field_class %>
                <% if errors.has_key?(:password) %>
                  <div class="invalid-feedback">
                    Please enter password
                  </div>
                <% end %>
                <small class="form-text text-muted">
                  <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %></small>
              </div><!-- form-group end.// -->
              <div class="col form-group">
                <% field_class = errors.has_key?(:password_confirmation) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :password_confirmation %>*
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => field_class %>
                <% if errors.has_key?(:password_confirmation) %>
                  <div class="invalid-feedback">
                    Please renter the password
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
            </div><!-- form-row end.// -->

            <hr class="hr-text" data-content="Residence">

            <div class="form-row">
              <div class="form-group col-5">
                <% field_class = errors.has_key?(:street) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :street %>*
                <%= f.text_field :street, :class => field_class %>
                <% if errors.has_key?(:street) %>
                  <div class="invalid-feedback">
                    Please enter a valid street name
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-1">
                <% field_class = errors.has_key?(:number) ? "form-control is-invalid" : "form-control" %>
                <label>N.*</label>
                <%= f.text_field :number, :class => field_class %>
                <% if errors.has_key?(:number) %>
                  <div class="invalid-feedback">
                    Please enter a valid house number
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-4">
                <% field_class = errors.has_key?(:city) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :city %>*
                <%= f.text_field :city, :class => field_class %>
                <% if errors.has_key?(:city) %>
                  <div class="invalid-feedback">
                    Please enter a valid city name
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-2">
                <% field_class = errors.has_key?(:zip_code) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :zip_code %>*
                <%= f.text_field :zip_code, :class => field_class %>
                <% if errors.has_key?(:zip_code) %>
                  <div class="invalid-feedback">
                    Please enter zip_code
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
            </div><!-- form-row.// -->

            <hr class="hr-text" data-content="Identity Card">

            <div class="form-row">
              <div class="form-group col-4">
                <% field_class = errors.has_key?(:id_card_number) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :id_card_number %>*
                <%= f.text_field :id_card_number, :class => field_class %>
                <% if errors.has_key?(:id_card_number) %>
                  <div class="invalid-feedback">
                    Please enter a valid identity card number
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-4">
                <% field_class = errors.has_key?(:municipality) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :municipality %>*
                <%= f.text_field :municipality, :class => field_class %>
                <% if errors.has_key?(:municipality) %>
                  <div class="invalid-feedback">
                    Please enter a valid municipality name
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-2">
                <% field_class = errors.has_key?(:release_date) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :release_date %>*
                <%= f.date_field :release_date, :class => field_class %>
                <% if errors.has_key?(:release_date) %>
                  <div class="invalid-feedback">
                    Please enter a valid release date
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
              <div class="form-group col-2">
                <% field_class = errors.has_key?(:expiration_date) ? "form-control is-invalid" : "form-control" %>
                <%= f.label :expiration_date %>*
                <%= f.date_field :expiration_date, :class => field_class %>
                <% if errors.has_key?(:expiration_date) %>
                  <div class="invalid-feedback">
                    Please enter a valid expiration date
                  </div>
                <% end %>
              </div><!-- form-group end.// -->
            </div><!-- form-row.// -->

            <hr class="hr-text" data-content="Profile Picture">

            <div class="row justify-content-center">
              <div class="col-5">
                <h1 class="profile_picture_h1">Upload your profile picture
                  <small>other users will be able to see this picture</small>
                </h1>
                <div class="profile_picture-upload">
                  <div class="profile_picture-edit">
                    <%= f.file_field :profile_picture %>
                    <label for="signaler_profile_picture"><i class="fa fa-camera" aria-hidden="true"></i></label>
                    <%= f.hidden_field :profile_picture_cache %>
                  </div>
                  <div class="profile_picture-preview">
                    <div id="profile_picture_preview" style="background-image: url(https://profile.actionsprout.com/default.jpeg);">
                    </div>
                  </div>
                </div>
              </div><!-- form-col-4.// -->
            </div><!-- form-row.// -->

            <div class="form-group">
              <button type="submit" name="Register" class="btn btn-primary btn-block"> Register</button>
            </div><!-- form-group// -->
          <% end %>
        </article><!-- card-body end .// -->
        <div class="border-top card-body text-center">Have an account?
          <%= link_to "Log in", new_session_path(resource_name) %>
        </div>
      </div><!-- card.// -->
    </div><!-- col-8//-->
  </div><!-- row justify-content-center end-->
</div>