<div class="container">
  <div class="row justify-content-center" style="padding-top:100px; padding-bottom:100px;">
    <div class="col-4">

      <div class="card">
        <article class="card-body">
          <%= link_to "Sign up", new_forwarder_registration_path, :class => "float-right btn btn-outline-primary" %>
          <h4 class="card-title mb-4 mt-1">Sign in as Forwarder</h4>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group input-icon">
              <i class="fa fa-user"></i>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email or login" %>
            </div><!-- form-group// -->

            <div class="form-group input-icon">
              <i class="fa fa-lock"></i>
              <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "******" %>
            </div><!-- form-group// -->

            <label class="form-check form-text text-muted">
              <%= f.check_box :remember_me, :class => "form-check-input" %>
              <span class="form-check-label">
              Remember me
            </span>
            </label><!-- form-check.// -->

            <div class="row">
              <div class="col-md-6"><br>
                <div class="form-group">
                  <%= f.submit "Log in", :class => "btn btn-primary btn-block" %>
                </div><!-- form-group// -->
              </div>
              <div class="col-md-6 text-right"><br>
                <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "small" %>
              </div>
            </div><!-- .row// -->
          <% end %>
        </article>
      </div><!-- card.// -->

    </div><!-- col-8//-->
  </div><!-- row justify-content-center end-->
</div><!-- container.//-->
