<div class="col-md-8 offset-md-2">
    <div class="card">
      <div class = "card-header">
        New Notice
      </div>
      <div class="card-body">
        <%= form_with(model: @notice, local: true) do |form| %>
          <% if @notice.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

              <ul>
              <% @notice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class=" col form-group">
              <%= form.label :title %>:*
              <%= form.text_field :title, id: :notice_title, :class => "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="col form-group">
               <%= form.label :content %>:*
               <%= form.text_area :content, id: :notice_content, :class => "form-control" %>
            </div>
          </div>

          <div class="row">

            <div class="col form-group">
              <%= form.label :posting_date %>:*
              <%= form.date_field :posting_date, id: :notice_posting_date, :class => "form-control" %>
            </div>

            <div class="col form-group">
              <%= form.label :expiration_date %>:*
              <%= form.date_field :expiration_date, id: :notice_expiration_date, :class => "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="col form-group">
              <%= form.label :notice_type %>:<br>
              <%= form.radio_button :notice_type, "Information", id: :notice_notice_type, checked: true %>Information<br>
              <%= form.radio_button :notice_type, "Warning", id: :notice_notice_type %>Warning<br>
              <%= form.radio_button :notice_type, "Obbligation", id: :notice_notice_type %>Obbligation<br>
              <%= form.radio_button :notice_type, "Result", id: :notice_notice_type %>Result<br>
            </div>
          </div>

          <div class="form-group">
            <%= form.submit "Create", class: "btn btn-primary mb-2" %>
          </div>
        <% end %>
      </div>
    </div><!-- end card -->
  </div>